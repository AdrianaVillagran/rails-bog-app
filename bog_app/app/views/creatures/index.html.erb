<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-4">
      <h2>Creatures!!!</h2
    </div>
  </div>
  <% @creatures.each do |creature| %>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <p>
          <strong>Name:</strong> <%= creature.name %><br>
          <strong>Description:</strong> <%= creature.description %>
        </p>
        <hr>
    </div>
  </div>
  <% end %>
</div>
