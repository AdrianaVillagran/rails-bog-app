<h2>Editing: <%= @creature.name %></h2>
<%= form_for(@creature) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <br>
  <div>
    <%= f.submit %>
  </div>

<% end %>
<br>
<%= link_to "Back", creatures_path %>
